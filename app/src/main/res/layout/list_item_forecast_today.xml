<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/today_linear_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal"
    android:baselineAligned="false"
    android:paddingStart="60dp"
    android:paddingLeft="60dp"
    android:paddingBottom="5dp"
    android:paddingTop="10dp"
    android:background="#ff1ca8f4">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:baselineAligned="false">


        <TextView
            android:id="@id/list_item_date_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            tools:text="Today"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@id/lit_item_high_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="72sp"
            tools:text="20"
            android:fontFamily="sans-serif-light"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@id/list_item_low_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            tools:text="18"
            android:fontFamily="sans-serif-light"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@id/list_item_icon_imageview"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/forecast_icon_description"
            tools:src="@drawable/art_clear"/>

        <TextView
            android:id="@id/list_item_forecast_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            tools:text="Легкий дождь"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

</LinearLayout>